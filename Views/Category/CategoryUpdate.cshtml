@model GetByIdCategoryDto
@{
    ViewData["Title"] = "Kategori Düzenle";
    Layout = "_Layout";
}

<div class="container border p-3">
    <h3>Kategori Düzenle</h3>
    <form asp-controller="Category" asp-action="CategoryUpdate" method="post">
        <input type="hidden" asp-for="CategoryId">
        <div class="form-group">
            <label for="CategoryName">Kategori Adı</label>
            <input type="text" asp-for="CategoryName" id="CategoryName" class="form-control">
        </div>
        <button type="submit" class="btn btn-success">Kaydet</button>
        <a asp-controller="Category" asp-action="CategoryList" class="btn btn-light ml-2">Geri</a>
    </form>
</div>