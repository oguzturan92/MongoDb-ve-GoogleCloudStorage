@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Kategori Listesi";
    Layout = "_Layout";
    int count = 0;
}

<div class="container border p-3">
    <h3>Kategori Listesi</h3>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th></th>
                    <th>Kategori Adı</th>
                    <th colspan="2"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@item.CategoryName</td>
                        <td><a class="btn btn-warning" asp-controller="Category" asp-action="CategoryUpdate" asp-route-id="@item.CategoryId">Düzenle</a></td>
                        <td><a class="btn btn-danger" asp-controller="Category" asp-action="CategoryDelete" asp-route-id="@item.CategoryId">Sil</a></td>
                    </tr>
                }
            </tbody>
        </table>
    } else
    {
        <div class="alert alert-info" role="alert">
            Kayıtlı kategori bulunmuyor.
        </div>
    }
    <a asp-controller="Category" asp-action="CategoryCreate" class="btn btn-info">Yeni Kategori Ekle</a>
</div>