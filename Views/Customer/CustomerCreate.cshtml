@model CreateCustomerDto
@{
    ViewData["Title"] = "Müşteri Ekle";
    Layout = "_Layout";
}

<div class="container border p-3">
    <h3>Yeni Müşteri Ekle</h3>
    <form asp-controller="Customer" asp-action="CustomerCreate" method="post">
        <div class="form-group">
            <label for="CustomerFullname">Ad Soyad</label>
            <input type="text" asp-for="CustomerFullname" id="CustomerFullname" class="form-control">
        </div>
        <div class="form-group">
            <label for="CustomerPhone">Telefon Numarası</label>
            <input type="text" asp-for="CustomerPhone" id="CustomerPhone" class="form-control">
        </div>
        <div class="form-group">
            <label for="CustomerAddress">Adres</label>
            <input type="text" asp-for="CustomerAddress" id="CustomerAddress" class="form-control">
        </div>
        <button type="submit" class="btn btn-success">Kaydet</button>
        <a asp-controller="Customer" asp-action="CustomerList" class="btn btn-light ml-2">Geri</a>
    </form>
</div>